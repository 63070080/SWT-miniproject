pipeline{
    agent any
    stages{
        stage("init"){
            steps{
                sh 'docker stop $(docker ps -aq) || true'
                sh 'docker rm $(docker ps -aq) || true'
                sh 'docker rmi $(docker images -q) || true'
                sh 'docker network rm front || true'
                sh 'docker network rm back || true'
            }
        }
        stage("pull"){
            steps{
                 withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'DOCKER_PWD', usernameVariable: 'DOCKER_USER')]) {
                    echo "pulling new image"
                    sh 'docker login -u ${DOCKER_USER} -p ${DOCKER_PWD}'
                    sh 'docker pull tanapongp/website:lastest'
                    sh 'docker pull tanapongp/python-server:lastest'
                    sh 'docker pull tanapongp/mongo:latest'
                    sh 'docker pull tanapongp/mongo-express:latest'
                }
               
            }
        }
        stage("work"){
            steps{
                echo "running image"
                sh 'docker network create front'
                sh 'docker network create back'
                sh 'docker run -d --network front -p 3000:3000 --name website tanapongp/website:lastest'
                sh 'docker run -d --network front --network back -p 8085:80 --name server tanapongp/python-server:lastest'
                sh 'docker run -d --network back -p 27017:27017 -v /data:/data/db --name database tanapongp/mongo:latest'
                sh 'docker run -d --network back -p 8081:8081 --name database-interface tanapongp/mongo-express:latest'
            }
        }
    }
}

